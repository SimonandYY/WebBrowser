<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dd2b2b2b"
    android:gravity="bottom"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/downloadConfirmation_filename"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/downloadConfirmation_yes"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onConfirmClicked"
            android:text="确认下载"/>
        <Button
            android:id="@+id/downloadConfirmation_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onCancleClicked"
            android:text="取消下载"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</LinearLayout>